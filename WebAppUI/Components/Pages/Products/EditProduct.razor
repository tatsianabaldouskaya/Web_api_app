@page "/Products/Add"
@using System.Runtime.CompilerServices
@using Microsoft.AspNetCore.Components
@using WebApplicationApi.Models.Dtos.Product
@using WebAppUI.Services
<PageTitle> Products</PageTitle>
<h3>Add Product</h3>


    <div class="form-group">
        <label for="name">Name</label>
        <InputText id="name" @bind-Value="productDto.Name" class="form-control" required />
        <ValidationMessage For="@(() => productDto.Name)" />
    </div>

    <div class="form-group">
        <label for="author">Author</label>
        <InputText id="author" @bind-Value="productDto.Author" class="form-control" required />
        <ValidationMessage For="@(() => productDto.Author)" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <InputTextArea id="description" @bind-Value="productDto.Description" class="form-control" />
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <InputNumber id="price" @bind-Value="productDto.Price" class="form-control" required />
        <ValidationMessage For="@(() => productDto.Price)" />
    </div>

    <div class="form-group">
        <label for="imagePath">Image Path (URL)</label>
        <InputText id="imagePath" @bind-Value="productDto.ImagePath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

@code
 
{
    private ProductDto productDto = new ProductDto()
    {
        Name = "Sample book",
        Author = "Sample Author",
        Description = "234234",
        ImagePath = "image.jpg",
        Price = 10
    };

}
